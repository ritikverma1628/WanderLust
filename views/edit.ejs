<% layout('layout') %>
<% block('styles').append('<link rel="stylesheet" href="/index.css">') %>

    <div class="container form">
        <h2 class="heading">Edit Listing</h2>
        <form action="/listings/<%= listing._id %>?_method=patch" method="post" class="row g-2">
            <div class="col-12">
                <label for="title" class="form-label">Title</label>
                <input type="text" id="title" name="title" value="<%= listing.title %>" class="form-control" required>
            </div>
            <div class="col-12">
                <label for="description" class="form-label">Description</label>
                <input type="text" id="description" name="description" value="<%= listing.description %>" class="form-control" required>
            </div>
            <div class="col-12">
                <label for="image" class="form-label">Image address</label>
                <input type="url" id="image" class="form-control" name="image" value="<%= listing.image %>" >
            </div>
            <div class="col-sm-4">
                <label for="price" class="form-label">Price/night</label>
                <input type="number" id="price" name="price" value="<%= listing.price %>" class="form-control" required>
            </div>
            <div class="col-sm-8">
                <label for="country" class="form-label">Country</label>
                <input type="text" id="country" name="country" value="<%= listing.country %>" class="form-control" required>
            </div>
            <div class="col-12">
                <label for="location" class="form-label">Location</label>
                <input type="text" id="location" name="location" value="<%= listing.location %>" class="form-control" required>
            </div>
            
            <div>
                <button class="btn btn-primary col-2">Edit</button>
            </div>
            
        </div>